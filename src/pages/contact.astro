---
import Layout from '@/layouts/Layout.astro';
import { Button } from '@/components/ui/button';
import { Input } from '@/components/ui/input';
import { Textarea } from '@/components/ui/textarea';
---

<Layout title="DevSumangal - Contact">
  <section class="container grid items-center gap-6 pb-8 pt-6 md:py-10">
    <div class="flex max-w-[980px] flex-col items-start gap-2">
      <h1 class="text-3xl font-extrabold leading-tight tracking-tighter sm:text-4xl md:text-5xl ">
        Contact Me
      </h1>
      <p class="max-w-[700px] text-base sm:text-lg text-muted-foreground ">
        Have a question or want to work together? Feel free to reach out!
      </p>
    </div>
  </section>

  <section class="container py-8">
    <form class="space-y-8 max-w-md mx-auto">
      <div class="space-y-2">
        <label for="name" class="text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70">Name</label>
        <Input type="text" id="name" placeholder="Your Name" required />
      </div>
      <div class="space-y-2">
        <label for="email" class="text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70">Email</label>
        <Input type="email" id="email" placeholder="your@email.com" required />
      </div>
      <div class="space-y-2">
        <label for="message" class="text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70">Message</label>
        <Textarea id="message" placeholder="Your message here..." required />
      </div>
      <Button type="submit" size="lg" className="w-full">Send Message</Button>
    </form>
  </section>
</Layout>

